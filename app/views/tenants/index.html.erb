<p id="notice"><%= notice %></p>
<h2 style="background-color: black ;color: white ;padding-left:5px;">List of auto Repair subdomains </h2>
<table class="table table-striped table-hover info">
  <thead>
    <tr class="info">
      <th>Name</th>
      <th>Subdomain</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr  class="active">
        <td><%= tenant.name %></a></td>
        <td><%= tenant.domain %></td>
        <td><%= tenant.image_url %></td>
        <td><%= link_to 'Show', tenant %></td>
        <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tenant', new_tenant_path ,class: "btn btn-success" %>
