<%= simple_form_for(@customer) do |f| %>
  <div class="modal show" id="myModal"   >
    <div class="modal-dialog" style="overflow-y: scroll; max-height:85%;"">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title">Welcome to <%= Tenant.current.name%></h3>
          <h5>Please sign in and choose your repair facility</h5>
        </div>
        <div class="modal-body">
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :phone %>
            <%= f.input :email %>
            <%= f.association :model %>
            <%= f.association :shop %>
          </div>
        </div>
        <div class="modal-footer">
        <%= link_to 'Back', customers_path, class: "btn btn-info pull left"%>
         <input type="reset" class="btn btn-danger">
          <%= f.button :submit, "Schedule My Appointment!", class:%w(btn btn-success) %>
        </div>
      </div>
    </div>
  </div>
<% end %>
 